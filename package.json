{
  "name": "modern-interactive-website",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/dist client/build server/dist",
    "dev": "npm-run-all --parallel --print-label --race dev:client dev:server",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "format": "prettier --write .",
    "postinstall": "npm run build:server",
    "lint": "npm run lint --workspaces --if-present",
    "prepare": "npm run build:server",
    "start": "cross-env NODE_ENV=production node server/dist/index.js",
    "prestart:prod": "npm run build",
    "start:prod": "npm run build && cross-env NODE_ENV=production node server/dist/index.js",
    "test": "npm run test --workspaces --if-present",
    "validate": "npm run lint && npm run build"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "framer-motion": "^12.23.20",
    "nodemailer": "^7.0.6",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.2",
    "cross-env": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
