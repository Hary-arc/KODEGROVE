{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "modern-interactive-website",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:client\" \"npm run dev:server\" --names \"CLIENT,SERVER\" --prefix-colors \"cyan,yellow\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "start": "npm run start --workspace=server",
    "start:prod": "npm run build && NODE_ENV=production npm run start --workspace=server",
    "prestart:prod": "npm run build",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/dist client/build server/dist",
    "postinstall": "npm run build:server",
    "validate": "npm run lint && npm run build",
    "prepare": "npm run build:server"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "concurrently": "^8.2.1"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "framer-motion": "^12.23.20",
    "tailwind-merge": "^3.3.1"
  }
}
